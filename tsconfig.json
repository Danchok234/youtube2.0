{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
			"@/*": ["./src/*"],
			"@/components/*": ["./app/components/*"],
			"@/styles/*": ["./src/styles/*"],
			"@/hooks/*": ["./app/hooks/*"],
			"@/services/*": ["./app/services/*"],
			"@/store/*": ["./app/store/*"],
			"@/types/*": ["./app/types/*"],
			"@/utils/*": ["./app/utils/*"],
			"@/app/*": ["./app/*"],
			"@/scss/variables": ["./src/styles/scss/common/index.scss"]
		},
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strict": false,
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
